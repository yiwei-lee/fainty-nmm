<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>com.google.gwt.faintynmm.server.GreetingServiceImpl
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>com.google.gwt.faintynmm.server.LoginServiceImpl
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>gameServlet</servlet-name>
		<servlet-class>com.google.gwt.faintynmm.server.GameServiceImpl
		</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/faintynmm/greet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/faintynmm/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>gameServlet</servlet-name>
		<url-pattern>/faintynmm/game</url-pattern>
	</servlet-mapping>
	
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>fainty-nmm.html</welcome-file>
	</welcome-file-list>

</web-app>
